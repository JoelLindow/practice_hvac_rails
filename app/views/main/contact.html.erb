<%= form_with url: contact_path, local: true do |f| %>
<h4>Your Name</h4>
<%= text_field_tag 'name', nil, placeholder: "Your Name" %>

<h4>Your Email Address</h4>
<%= text_field_tag 'email', nil, placeholder: "homeowner@gmail.com" %>

<h4>Your Phone Number</h4>
<%= text_field_tag 'phone', nil, placeholder: "303-000-0000" %>

<h4>Street Address</h4>
<%= text_field_tag 'street_address', nil, placeholder: "123 Home Street" %>

<h4>City</h4>
<%= text_field_tag 'city', nil, placeholder: "Denver" %>

<h4>State</h4>
<%= text_field_tag 'state', nil, value: "Colorado" %>

<h4>Zip Code</h4>
<%= text_field_tag 'zip', nil, placeholder: "88888" %>

<h4>Property Type</h4>
<%= radio_button_tag :property_type, 'Residential'%>
<%= label_tag 'Residential' %>
<br>
<%= radio_button_tag :property_type, 'Commercial'%>
<%= label_tag 'Commercial' %>
<br>
<h4>Anything else you want to tell us?</h4>
<%= text_area_tag 'message', nil, placeholder: "Add text here....." %>
<br>

<%= f.submit 'Submit' %>
<br>
<br>
<% end %>
